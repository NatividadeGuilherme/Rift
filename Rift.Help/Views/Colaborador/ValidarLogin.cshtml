@model Rift.Models.Colaborador
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript">
        /* $(document).ready(function () {
             $('.Pesquisa').select2();
         });*/
    </script>
    <link href="~/Estilos/EstiloLayout.css" rel="stylesheet" />
    <link href="~/Estilos/Reset.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <script src="~/Scripts/sweetalert.min.js"></script>
</head>
<body>
    <main>
        @using (Html.BeginForm())
        {
            <div class="container">
                <div class="formulario-login">
                    <div id="conteudo">
                        <img src="~/imagens/RIFT HELPER.png" id="logo-rift" />
                        <div class="row">
                            <div class="col-md-12">
                                <label id="label-login">E-mail</label>
                                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control input-group-addon", id = "emaillogin", placeholder = "colaborado@colaborador.com", maxlength = "180" } })
                            </div>
                        </div>
                        <div class="row">
                            <br />
                            <div class="col-md-12">
                                <label id="label-login">Senha</label>
                                <input type="password" id="Senha" name="Senha" class="form-control" maxlength="8" />
                                @*@Html.EditorFor(m => m.Senha, new { htmlAttributes = new { @class = "form-control" } })*@
                            </div>
                        </div>
                        <br />
                        <input type="submit" id="logar" value="Entrar" class="btn btn-success" /><br />
                    </div><br />
                    <a href="#" >
                        <p id="p-password" style="margin-left:130px">Esqueci minha senha</p>

                    </a>

                </div>
            </div>
        }


    </main>
@if(ViewBag.Mensagem!=null || ViewBag.Mensagem == "")
{
    <script>
        swal("Falha","@Html.Raw(ViewBag.Mensagem)","warning")
    </script>
}
    
</body>
</html>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/JsLogin.js"></script>